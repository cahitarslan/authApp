 <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-password-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-2">Şifremi Unuttum</h1>
                                        <% if (locals.validation_error != undefined || locals.success_message != undefined || locals.login_error != undefined) { %>
                                            <%- include('./partials/_mesaj') %> 
                                        <% } %>
                                        <p class="mb-4">Böyle şeyler olabilir ama bir daha sakın unutmayın &#128540;</p>
                                    </div>
                                    <form class="user" action="/forget-password" method="post">
                                        <div class="form-group">
                                            <input type="email" value="<%= typeof email != 'undefined' ? email : null %>"  name="email" class="form-control form-control-user"
                                                id="exampleInputEmail" aria-describedby="emailHelp"
                                                placeholder="Email adresinizi giriniz">
                                        </div>
                                        <button type="submit" class="btn btn-primary btn-user btn-block">
                                            Şifreyi Sıfırla
                                        </button>
                                    </form>
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" href="/register">Hesap Oluştur</a>
                                    </div>
                                    <div class="text-center">
                                        <a class="small" href="/login">Hesabınız var mı? Giriş Yapın</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>