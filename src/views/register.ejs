<div class="card o-hidden border-0 shadow-lg my-5">
    <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
            <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
            <div class="col-lg-7">
                <div class="p-5">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-4">Bir Hesap Oluşturun</h1>
                        <% if (locals.validation_error != undefined) { %>
                            <%- include('./partials/_mesaj') %> 
                        <% } %>
                    </div>
                    <form class="user" action="/register" method="post">
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <input type="text" value="<%= typeof locals.ad != 'undefined' ? ad : null %>" name="ad" class="form-control form-control-user" form-control-userid="exampleFirstName" placeholder="İsminiz">
                            </div>
                            <div class="col-sm-6">
                                <input type="text" value="<%= typeof soyad != 'undefined' ? soyad : null %>" name="soyad" class="form-control form-control-user" form-control-userid="exampleLastName" placeholder="Soyisminiz">
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="email" value="<%= typeof email != 'undefined' ? email : null %>" name="email" class="form-control form-control-user" form-control-userid="exampleInputEmail" placeholder="Emailiniz ">
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <input type="password" value="<%= typeof sifre != 'undefined' ? sifre : null %>"   name="sifre" class="form-control form-control-user" id="exampleInputPassword" placeholder="Parolanız">
                            </div>
                            <div class="col-sm-6">
                                <input type="password" value="<%= typeof resifre != 'undefined' ? resifre : null %>"   name="resifre" class="form-control form-control-user" id="exampleRepeatPassword" placeholder="Parolanızı Tekrar Yazınız">
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary btn-user btn-block">
                            Hesap Oluştur
                        </button>
                        <hr>
                        <a href="index.html" class="btn btn-google btn-user btn-block">
                            <i class="fab fa-google fa-fw"></i> Google ile Kaydol
                        </a>
                        <a href="index.html" class="btn btn-facebook btn-user btn-block">
                            <i class="fab fa-facebook-f fa-fw"></i> Facebook ile Kaydol
                        </a>
                    </form>
                    <hr>
                    <div class="text-center">
                        <a class="small" href="/forgot-password">Şifremi Unuttum</a>
                    </div>
                    <div class="text-center">
                        <a class="small" href="/login">Hesabınız var mı? Giriş Yapın</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>